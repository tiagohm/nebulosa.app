{
	"name": "@tiagohm/nebulosa-app",
	"description": "The complete integrated solution for all of your astronomical imaging needs.",
	"version": "0.2.0",
	"private": true,
	"type": "module",
	"main": "main.ts",
	"module": "main.ts",
	"scripts": {
		"tailwind": "tailwindcss -m -i ./src/web/index.css -o dist/index.css",
		"dev": "bun tailwind && bun --hot main.ts",
		"prod": "bun tailwind && NODE_ENV=production bun --production main.ts",
		"lint": "biome lint --write src/",
		"format": "biome format --write src/",
		"compile": "bun tailwind && NODE_ENV=production bun run build.ts",
		"tsc": "tsc --noEmit"
	},
	"author": {
		"name": "Tiago Melo",
		"email": "tiago.henrique.cco@gmail.com"
	},
	"license": "MIT",
	"dependencies": {
		"@heroui/react": "2.8.7",
		"@tailwindcss/cli": "4.1.18",
		"@uidotdev/usehooks": "2.4.1",
		"@use-gesture/react": "10.3.1",
		"bunshi": "2.2.0",
		"clsx": "2.1.1",
		"croner": "9.1.0",
		"nebulosa": "github:tiagohm/nebulosa.ts",
		"open": "11.0.0",
		"react": "19.2.4",
		"react-dom": "19.2.4",
		"react-leaflet": "5.0.0",
		"recharts": "3.7.0",
		"tailwindcss": "4.1.18",
		"utility-types": "3.11.0",
		"valtio": "2.3.0"
	},
	"devDependencies": {
		"@biomejs/biome": "2.3.13",
		"@types/bun": "1.3.7",
		"@types/leaflet": "1.9.21",
		"@types/react": "19.2.10",
		"@types/react-dom": "19.2.3",
		"typescript": "5.9.3"
	},
	"trustedDependencies": [
		"@biomejs/biome",
		"@heroui/shared-utils",
		"nebulosa"
	]
}
